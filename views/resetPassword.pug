extends index
block head
    link(rel="stylesheet", href="/CSS/login-page.css")
    link(rel='stylesheet' href="/CSS/css/all.css")
    //- script(src="/login-page/js_folder/jquery-3.4.1.js")
block content
    section
        h3 Reset your password  
        form(action="#" method="POST" name="resetPassword" data-id=`${token}`)
            .input-field
                i(class='fas fa-lock')
                input(type='password' name='password' placeholder='New Password' required)#password
            br
            .input-field
                i(class='fas fa-lock')
                input(type='password' name='passwordConfirm' placeholder='Confirm Password' required)#passwordConfirm
            input(type="submit" value='Submit' name="submit")#submit
            br
            .login-message
            //- span.remember
            //-     input(type='checkbox' name='remember-me' )#remember-me
            //-    / label Remember me
            .loader
                img(src="/sign-up/5.svg", alt="loading...")
        .line-through
        p Already have an account? 
            a(href="/signIn")#signUp Login
        p Don't have an account ? 
            a(href="/signUp")#signUp REGISTER HERE
    .illustration
    
     
    
